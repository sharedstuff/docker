# EditorConfig is awesome: https://EditorConfig.org

[*.{json*,code-workspace,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ps1,psd1,psm1}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
